---
import { Icon } from 'astro-icon/components';
const base = import.meta.env.BASE_URL;
---

<header>
    <nav class="navbar navbar-light navbar-custom p-0">
        <div class="container-fluid px-3 px-lg-5 py-2 d-flex justify-content-between align-items-center">
            
            <a class="navbar-brand d-flex align-items-center m-0" href={base}>
                <div class="me-2 me-md-3">
                    <img src={base + "img/church_logo.png"} alt="Grace Baptist Church Logo" style="max-height: 50px; width: auto;" />
                </div>
                <div class="d-flex flex-column justify-content-center lh-1">
                    <span class="fw-bold brand-text text-wrap">Grace Baptist Church</span>
                    <span class="brand-tagline text-secondary mt-1 d-none d-sm-block">Worship • Community • Service</span>
                </div>
            </a>

            <button class="navbar-toggler border-0 ms-auto" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight">
                <Icon name="fa-solid:bars" size="1.5rem" style="color: #8B0000;" />
            </button>
        </div>
    </nav>

    <div class="offcanvas offcanvas-end offcanvas-custom" tabindex="-1" id="offcanvasRight">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title">Menu</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <nav>
                <ul class="nav flex-column gap-2 p-2">
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" href={base}>
                            <Icon name="fa-solid:home" class="me-3" size="1.2rem" /> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" href={base + "/about"}>
                            <Icon name="fa-solid:church" class="me-3" size="1.2rem" /> About Us
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" href={base + "/preaching"}>
                            <Icon name="fa-solid:book-open" class="me-3" size="1.2rem" /> Preaching
                        </a>
                    </li>

                    <li class="nav-item">
                        <button 
                            id="bibleStudyTrigger"
                            class="nav-link d-flex align-items-center justify-content-between w-100 border-0 bg-transparent shadow-none ignore-offcanvas-close" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#bibleStudyMenu" 
                            aria-expanded="false"
                            type="button"
                        >
                            <div class="d-flex align-items-center">
                                <Icon name="fa-solid:book-reader" class="me-3" size="1.2rem" /> Bible Study
                            </div>
                            <Icon name="fa-solid:chevron-down" size="0.8rem" class="chevron-icon" />
                        </button>
                        
                        <div class="collapse" id="bibleStudyMenu">
                            <ul class="nav flex-column ms-4 ps-2 border-start gap-1 mt-1">
                                <li><a class="nav-link small" href={base + "/bible-reading"}>Bible Reading Guide</a></li>
                                <li><a class="nav-link small" href={base + "/discipleship"}>Discipleship Lesson</a></li>
                                <li><a class="nav-link small" href={base + "/sunday-school"}>Sunday School Lesson</a></li>
                                <li><a class="nav-link small" href={base + "/dvbs"}>DVBS Lesson</a></li>
                                <li><a class="nav-link small" href={base + "/sermon-archive"}>Sermon Archive</a></li>
                                <li><a class="nav-link small" href={base + "/study-guides"}>Study Guides</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" href={base + "/staff"}>
                            <Icon name="fa-solid:users" class="me-3" size="1.2rem" /> Staff
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" href={base + "/photos"}>
                            <Icon name="fa-solid:images" class="me-3" size="1.2rem" /> Photos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" href={base + "/music"}>
                            <Icon name="fa-solid:music" class="me-3" size="1.2rem" /> Music
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" href={base + "/events"}>
                            <Icon name="fa-solid:calendar-alt" class="me-3" size="1.2rem" /> Events
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" href={base + "/missions"}>
                            <Icon name="fa-solid:church" class="me-3" size="1.2rem" /> Missions
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</header>

<style>
    .nav-link.small {
        font-size: 0.85rem;
        color: #6c757d;
        padding-top: 0.25rem;
        padding-bottom: 0.25rem;
    }
    
    .nav-link.small:hover {
        color: #8B0000;
    }

    [aria-expanded="true"] .fa-solid\:chevron-down {
        transform: rotate(180deg);
        transition: transform 0.3s ease;
    }

    button.nav-link {
        text-align: left;
        color: inherit;
        padding: var(--bs-nav-link-padding-y) var(--bs-nav-link-padding-x);
    }

    .chevron-icon {
        transition: transform 0.3s ease;
    }

    [aria-expanded="true"] .chevron-icon {
        transform: rotate(180deg);
    }

    .nav-link.small {
        font-size: 0.85rem;
        color: #6c757d;
        padding: 0.3rem 1rem;
    }
</style>
<script>
    function setupOffcanvas() {
        const trigger = document.getElementById('bibleStudyTrigger');
        const offcanvasElement = document.getElementById('offcanvasRight');

        if (trigger && offcanvasElement) {
            trigger.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                const targetId = this.getAttribute('data-bs-target');
                const targetEl = document.querySelector(targetId);

                if ((window as any).bootstrap) {
                    const bootstrap = (window as any).bootstrap;
                    const bsCollapse = bootstrap.Collapse.getOrCreateInstance(targetEl);
                    bsCollapse.toggle();
                    
                    const isExpanded = this.getAttribute('aria-expanded') === 'true';
                    this.setAttribute('aria-expanded', (!isExpanded).toString());
                }
            }, true); 
        }
    }

    document.addEventListener("astro:page-load", setupOffcanvas);
</script>