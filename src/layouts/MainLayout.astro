---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';

const { title } = Astro.props;
import '../styles/style.css';
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Grace Baptist Church</title>
    
    <link rel="icon" type="image/png" href={base + "/img/church_logo.png"}>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <script src="https://kit.fontawesome.com/91d5bebb50.js" crossorigin="anonymous"></script>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300&display=swap" rel="stylesheet">

    <ClientRouter />
</head>
<body>

    <video autoplay muted loop id="video-background" transition:persist>
        <source src={base + "videos/gbc.mp4"} type="video/mp4">
    </video>

    <Header transition:persist />

    <main class="main-container" transition:animate="fade">
        <slot />
    </main>

    <Footer />

    <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" data-astro-rerun></script>
</body>
<script>
    document.addEventListener('astro:page-load', () => {
        if ((window as any).FontAwesome) (window as any).FontAwesome.dom.i2svg();
        const menuLinks = document.querySelectorAll('.offcanvas-body .nav-link');
        const offcanvasElement = document.getElementById('offcanvasRight');
        
        if (offcanvasElement && (window as any).bootstrap) {
            const bsOffcanvas = (window as any).bootstrap.Offcanvas.getOrCreateInstance(offcanvasElement);
            
            menuLinks.forEach(link => {
                link.addEventListener('click', () => {
                    bsOffcanvas.hide(); 
                });
            });
        }
    });
</script>
</html>