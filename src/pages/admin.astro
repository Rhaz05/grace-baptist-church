  </div>

  <div class="modal" id="addResourceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-0 shadow-lg rounded-4">
        <div class="modal-body p-4">
          <h5 class="fw-bold mb-4">Add New Resource</h5>
          <form id="add-resource-form">
            <div class="form-floating mb-3">
                <select class="form-select" name="category" required>
                    <option value="Sermon Archive">Sermon Archive</option>
                    <option value="Sunday School">Sunday School</option>
                    <!-- <option value="Discipleship">Discipleship</option>
                    <option value="Bible Reading Guide">Bible Reading Guide</option>
                    <option value="DVBS">DVBS</option>
