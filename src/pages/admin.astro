                    <option value="Discipleship">Discipleship</option>
                    <option value="Bible Reading Guide">Bible Reading Guide</option>
                    <option value="DVBS">DVBS</option>
                    <option value="Study Guides">Study Guides</option>
                </select>
                <label>Category</label>
            </div>
            <div class="form-floating mb-3"><input type="text" class="form-control" id="edit-resource-title" name="title" required placeholder="Title"><label>Resource Title</label></div>
