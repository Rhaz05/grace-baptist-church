            <div class="form-floating mb-3"><input type="url" class="form-control" name="image_url" placeholder="Cover Image"><label>Cover Image URL (Optional)</label></div>
            <div class="form-floating mb-3"><textarea class="form-control" name="description" placeholder="Desc" style="height: 100px"></textarea><label>Description</label></div>
            <div class="d-flex gap-2"><button type="button" class="btn btn-light flex-fill close-modal-trigger">Cancel</button><button type="submit" class="btn btn-danger flex-fill">Save</button></div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="modal" id="editResourceModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border-0 shadow-lg rounded-4">
        <div class="modal-body p-4">
          <h5 class="fw-bold mb-4">Edit Resource</h5>
          <form id="edit-resource-form">
            <input type="hidden" name="id" id="edit-resource-id">
            <div class="form-floating mb-3">
                <select class="form-select" id="edit-resource-category" name="category" required>
                    <option value="Sermon Archive">Sermon Archive</option>
