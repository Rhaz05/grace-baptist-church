---
import MainLayout from '../layouts/MainLayout.astro';
import { Icon } from 'astro-icon/components';

const staffMembers = [
    { name: "Pastor John", role: "Lead Pastor" },
    { name: "Sarah Doe", role: "Youth Director" },
    { name: "Mark Smith", role: "Worship Leader" },
    { name: "Jane Ray", role: "Deacon" },
    { name: "David Lee", role: "Elder" },
    { name: "Lisa Kim", role: "Volunteer" },
    { name: "Chris Wong", role: "Outreach" },
    { name: "Mike Johnson", role: "Media Director" }
];
---

<MainLayout title="Meet the Staff">
    
    <div class="container page-content">
        
        <section class="text-center mb-5 fade-in-up">
            <h1 class="text-uppercase fw-bold page-title">Meet The Staff</h1>
            <p class="lead">Dedicated to serving our community and leading in faith.</p>
        </section>

        <section class="content-card mb-5 fade-in-up">
            <div class="row justify-content-center text-center">
                <div class="col-lg-10">
                    <h2 class="fw-bold mb-4 text-dark">Our Mission</h2>
                    
                    <p class="text-muted mb-3">
                        Egestas elit dui scelerisque ut eu purus aliquam vitae habitasse.
                        Egestas elit dui scelerisque ut eu purus aliquam vitae habitasse. Egestas elit dui
                        scelerisque ut eu purus aliquam vitae habitasse. Egestas elit dui scelerisque ut eu
                        purus aliquam vitae habitasse.
                    </p>
                    <p class="text-muted">
                        Excepteur efficient emerging, minim veniam enim aute carefully curated Ginza conversation
                        exquisite perfect nostrud nisi intricate Content. Qui International first-class nulla ut.
                    </p>
                </div>
            </div>
        </section>

        <section class="team-section fade-in-up" style="animation-delay: 0.2s;">
            <h2 class="text-center fw-bold mb-5">Our Team</h2>
            
            <div class="row justify-content-center g-4">
                
                {staffMembers.map((member) => (
                    <div class="col-6 col-md-4 col-lg-3">
                        <div class="member-card text-center h-100">
                            
                            <div class="member-photo-wrapper mx-auto mb-3">
                                <div class="placeholder-avatar d-flex align-items-center justify-content-center">
                                    <Icon name="fa-solid:user" class="text-secondary opacity-25" size="3rem" />
                                </div>
                            </div>

                            <h5 class="fw-bold text-dark mb-1">{member.name}</h5>
                            <p class="text-danger small text-uppercase fw-bold mb-0">{member.role}</p>
                            
                        </div>
                    </div>
                ))}

            </div>
        </section>

    </div>

</MainLayout>

<style>
    /* =========================================
       1. GLOBAL STYLES
       ========================================= */
    :global(body) {
        background-color: #f2f4f8;
        color: #333;
    }

    .page-content {
        padding-top: 140px; 
        padding-bottom: 80px;
    }

    .fade-in-up {
        animation: fadeInUp 0.6s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        opacity: 0;
        transform: translateY(20px);
    }
    
    @keyframes fadeInUp {
        to { opacity: 1; transform: translateY(0); }
    }

    /* =========================================
       2. CONTENT CARD
       ========================================= */
    .content-card {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.05);
        padding: 3rem;
        border: 1px solid rgba(0,0,0,0.05);
    }

    /* =========================================
       3. TEAM MEMBER CARDS
       ========================================= */
    .member-card {
        background: white;
        padding: 2rem 1rem;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .member-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 30px rgba(139, 0, 0, 0.1);
    }

    /* Circular Photo Area */
    .member-photo-wrapper {
        width: 120px;
        height: 120px;
        position: relative;
    }

    .placeholder-avatar, .member-img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #f8f9fa; 
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .placeholder-avatar {
        background-color: #e9ecef;
    }

</style>